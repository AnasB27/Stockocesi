<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageTitle }}</title>
    <link rel="stylesheet" href="/stockocesi/static/css/main.css">
    <link rel="stylesheet" href="/stockocesi/static/css/stock.css">
</head>
<body>
    {% include 'layout/header.twig' %}

    <main>
        <div class="search-filter-container">
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Rechercher un produit" class="search-input">
                <button class="filter-button" id="filterButton">
                    <img src="/stockocesi/static/assets/img/filter.png" alt="Filtrer">
                </button>
            </div>
        </div>

        <div class="controls-container">
            <div class="add-product-container">
                {% if session.user_role == 'Admin' or session.user_role == 'Manager' %}
                    <button class="add-product-button" id="openAddProductModal">
                        Ajouter un produit
                    </button>
                {% endif %}
            </div>
            <div class="stock-alerts">
                {% if lowStockProducts is not empty %}
                    <div class="alert warning">
                        Produits en stock faible : {{ lowStockProducts|length }}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="stock-list">
            {% if products is empty %}
                <p class="no-products">Aucun produit en stock.</p>
            {% else %}
                {% for product in products %}
                    <div class="stock-item">
                        <div class="product-info">
                            <span><strong>Produit :</strong> {{ product.name }}</span>
                            <span><strong>Catégorie :</strong> {{ product.category_name }}</span>
                            <span class="quantity {% if product.quantite <= product.seuil_alerte %}warning{% endif %}">
                                <strong>Quantité :</strong> {{ product.quantite }}
                            </span>
                            <span><strong>Prix :</strong> {{ product.prix|number_format(2, ',', ' ') }} €</span>
                        </div>
                        {% if canManageStock %}
                            <div class="product-actions">
                                <button onclick="editProduct({{ product.id }})">
                                    <img src="/stockocesi/static/assets/img/edit.png" alt="Modifier">
                                </button>
                                <button onclick="confirmDelete({{ product.id }})">
                                    <img src="/stockocesi/static/assets/img/delete.png" alt="Supprimer">
                                </button>
                                <button onclick="showHistory({{ product.id }})">
                                    <img src="/stockocesi/static/assets/img/history.png" alt="Historique">
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </main>

    <!-- Modal d'ajout de produit -->
    <div id="addProductModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Ajouter un produit</h2>
                <form id="addProductForm">
                    <div class="form-group">
                        <label for="productName">Nom du produit</label>
                        <input type="text" id="productName" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="categorySelect">Catégorie</label>
                        <select id="categorySelect" name="category_id" required>
                            <option value="">Sélectionner une catégorie</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="productQuantity">Quantité</label>
                        <input type="number" id="productQuantity" name="quantity" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="productPrice">Prix (€)</label>
                        <input type="number" id="productPrice" name="price" min="0" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label for="alertThreshold">Seuil d'alerte</label>
                        <input type="number" id="alertThreshold" name="alert_threshold" min="1" required>
                    </div>
                    <div class="modal-buttons">
                        <button type="submit" class="btn-primary">Ajouter</button>
                        <button type="button" class="btn-secondary" onclick="closeAddProductModal()">Annuler</button>
                    </div>
                </form>
            </div>
        </div>
    {% include 'layout/footer.twig' %}
    <script src="/stockocesi/static/js/stock.js"></script>
    <script src="/stockocesi/static/js/add-stock.js"></script>
</body>
</html>