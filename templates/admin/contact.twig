{% include 'layout/header.twig' %}

<div class="contact-container" style="max-width:500px;margin:40px auto;">
    <h2>Contacter l'administrateur</h2>
    {% if success_message %}
        <div class="alert success">{{ success_message }}</div>
    {% endif %}
    {% if error_message %}
        <div class="alert error">{{ error_message }}</div>
    {% endif %}
    <form method="post" action="/stockocesi/contact" id="contactForm">
        <label for="subject">Sujet :</label>
        <input type="text" id="subject" name="subject" class="form-input" required>

        <label for="content">Message :</label>
        <textarea id="content" name="content" class="form-input" rows="6" required></textarea>

        <button type="submit" class="add-product-button" style="width:100%;margin-top:16px;">Envoyer</button>
    </form>
</div>

{% include 'layout/footer.twig' %}