<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageTitle }}</title>
    <link rel="stylesheet" href="/stockocesi/static/css/ajouter_magasin.css">
    <link rel="stylesheet" href="/stockocesi/static/css/main.css">
</head>
<body>
    {% include 'layout/header.twig' with {'current_page': 'add-store'} %}
    
    <main>
        <form action="/stockocesi/admin/add-store" method="POST">
            <h1>Ajouter un magasin</h1>

            {% if error %}
                <div class="error-message">{{ error }}</div>
            {% endif %}
            
            {% if success %}
                <div class="success-message">{{ success }}</div>
            {% endif %}

            <div class="form-group">
                <label for="nom">Nom</label>
                <input type="text" id="nom" name="name" required placeholder="Nom du magasin">
            </div>

            <div class="form-group">
                <label for="email">Adresse mail à contacter</label>
                <input type="email" id="email" name="email" required placeholder="Adresse mail">
            </div>

            <div class="form-group">
                <label for="identifiant">Identifiant</label>
                <input type="text" id="identifiant" name="identifier" required placeholder="Identifiant">
            </div>

            <div class="form-group">
                <label for="type-produit">Type de produit</label>
                <select id="type-produit" name="product_type" required>
                    <option value="" disabled selected>Sélectionner un type</option>
                    <option value="alimentaire">Alimentaire</option>
                    <option value="electronique">Électronique</option>
                    <option value="vetements">Vêtements</option>
                </select>
            </div>

            <button type="submit">Ajouter</button>
        </form>
    </main>

    {% include 'layout/footer.twig' %}
</body>
</html>